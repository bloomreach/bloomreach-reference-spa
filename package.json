{
  "name": "@bloomreach/example-saas",
  "description": "Example React SPA for brX SaaS",
  "version": "0.3.0-saas",
  "private": true,
  "engines": {
    "node": "14",
    "npm": "7"
  },
  "scripts": {
    "build": "SKIP_PREFLIGHT_CHECK=true react-scripts build",
    "lint": "eslint src/",
    "start": "SKIP_PREFLIGHT_CHECK=true react-scripts start"
  },
  "dependencies": {
    "@bloomreach/connector-components-react": "^0.3.0-saas",
    "@bloomreach/react-sdk": "^0.3.0-saas",
    "@bloomreach/spa-sdk": "^0.3.0-saas",
    "@fortawesome/fontawesome-svg-core": "^1.2",
    "@fortawesome/free-solid-svg-icons": "^5.15",
    "@fortawesome/react-fontawesome": "^0.1",
    "axios": "^0.21",
    "bootstrap": "^4.5",
    "react": "^16.14",
    "react-bootstrap": "^1.4",
    "react-cookie": "^4.0.3",
    "react-dom": "^16.14",
    "react-google-maps": "^9.4",
    "react-player": "^2.6",
    "react-router-dom": "^5.2"
  },
  "devDependencies": {
    "@bloomreach/eslint-config": "^0.1",
    "@types/googlemaps": "^3.43",
    "@types/markerclustererplus": "^2.1",
    "@types/react": "^16.9",
    "@types/react-dom": "^16.9",
    "@types/react-router-dom": "^5.1",
    "eslint": "^7.12",
    "node-sass": "^4.14",
    "react-scripts": "4.0.0",
    "typescript": "~4.0"
  },
  "eslintConfig": {
    "extends": "@bloomreach/eslint-config",
    "overrides": [
      {
        "files": [
          "*.tsx"
        ],
        "rules": {
          "react/require-default-props": "off"
        }
      }
    ],
    "rules": {
      "react/jsx-props-no-spreading": "off",
      "react/no-danger": "off",
      "no-underscore-dangle": [
        "error",
        {
          "allow": [
            "_br_uid_2"
          ]
        }
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
